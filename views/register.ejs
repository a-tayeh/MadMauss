<% include ./partials/header.ejs %>
  
<div class = "container">
    <h1 class = "text-center">Sign up Page!</h1>  
    <br>
    <div class = "row">
        <div class = "col-md-4 col-md-offset-4">

        <form action = "/register"  method = "POST" >
            <div class = "form-group">
                <input class = "form-control" type = "text" name = "firstName" placeholder ="Your First Name" required>
            </div>
            <div class = "form-group">
                <input class = "form-control" type = "text" name = "lastName" placeholder ="Your Last Name" required>
            </div>
            <div class = "form-group">
                <input class = "form-control" type = "text" name = "email" placeholder ="Your Email" required>
            </div>          
            <div class = "form-group">
                <input class = "form-control" type = "text" name = "username" placeholder ="Your Username" required>
            </div>
            <div class = "form-group">
                <input class = "form-control" type = "password" name = "password" placeholder ="Your Password" required >
            </div>
            <div class="g-recaptcha pull-center" data-sitekey="<%=rec_key%>">
                
            </div>
            <br>
            <button type = "submit" class = "btn btn-primary">Register</button>
            
        </form>               
        </div>
       
        
    </div>        
    

  
</div>    

    
<% include ./partials/footer.ejs %>
