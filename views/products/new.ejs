<%include ../partials/header%>

<div class = "container">
    <div class = "row">
        
        <div class = "container">
        <div class = "col-md-4 col-md-offset-4">
                        <h1>Add a product</h1>
            <form action = "/products" method = "POST" enctype="multipart/form-data">

                    <div class="form-group">
                        <label for="name">Name</label>
                        <input id = "name" class="form-control" type="text" name="product[name]" placeholder="iPhone X or Note 8">
                    </div>
                <div class="form-group">
                    <label for="image">Image Upload</label>
                    <input  class = "img-upload" type="file" id="image" name="image" accept="image/*" required>
                </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input id = "description" class="form-control" type="text" name="product[description]" placeholder="description">
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input id = "price" class="form-control" type="number" name="product[cost]" placeholder="1.50" min = 0.01 step = 0.01>
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input class="form-control" type="text" name="product[location]" id="location" placeholder="Yosemite National Park, CA" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                    
            </form>  
        </div>    
        </div>
        
    </div>
   
</div>


<%include ../partials/footer%>